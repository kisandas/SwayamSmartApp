<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.area.SelectLocalityActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:elevation="@dimen/_5sdp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/textHeader"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivBack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:singleLine="true"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/lbl_selectlocality"
            android:textColor="@color/textHeader"
            android:textSize="@dimen/text_18" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/user_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="@string/lbl_search_service"
                android:textSize="@dimen/text_14"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp">

                //All Locality
                <RelativeLayout
                    android:id="@+id/alllocality_rel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/alllocality_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/lbl_alllocality"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/alllocality_check_box"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_14" />

                    <CheckBox
                        android:id="@+id/alllocality_check_box"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <View style="@style/ViewLineMenu"/>

                //City Locality
                <RelativeLayout
                    android:id="@+id/citylocality_rel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/citylocality_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/lbl_citylocality"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/citylocality_check_box"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_14" />

                    <CheckBox
                        android:id="@+id/citylocality_check_box"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>


                    //Professional/Events
                </RelativeLayout>

                <View style="@style/ViewLineMenu"/>

                //City Locality1
                <RelativeLayout
                    android:id="@+id/citylocality1_rel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/citylocality1_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/lbl_citylocality1"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/citylocality1_check_box"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_14" />

                    <CheckBox
                        android:id="@+id/citylocality1_check_box"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>


                    //Professional/Events
                </RelativeLayout>

                <View style="@style/ViewLineMenu"/>

                //City Locality2
                <RelativeLayout
                    android:id="@+id/citylocality2_rel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/citylocality2_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/lbl_citylocality2"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/citylocality2_check_box"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_14" />

                    <CheckBox
                        android:id="@+id/citylocality2_check_box"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>


                    //Professional/Events
                </RelativeLayout>

                <View style="@style/ViewLineMenu"/>

                //City Locality3
                <RelativeLayout
                    android:id="@+id/citylocality3_rel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/citylocality3_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/lbl_citylocality3"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/citylocality3_check_box"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_14" />

                    <CheckBox
                        android:id="@+id/citylocality3_check_box"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>


                    //Professional/Events
                </RelativeLayout>

                <View style="@style/ViewLineMenu"/>

                //City Locality4
                <RelativeLayout
                    android:id="@+id/citylocality4_rel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/citylocality4_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/lbl_citylocality4"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/citylocality4_check_box"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_14" />

                    <CheckBox
                        android:id="@+id/citylocality4_check_box"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/next_business_img"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_circle_shape"
        android:backgroundTint="@color/colorPrimary"
        android:padding="@dimen/_8sdp"
        android:rotation="180"
        android:tint="@color/white"
        android:elevation="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/ic_back_arrow" />

</RelativeLayout>